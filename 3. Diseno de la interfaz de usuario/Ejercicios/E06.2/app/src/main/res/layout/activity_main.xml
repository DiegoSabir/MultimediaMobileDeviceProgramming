<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:textColor="@color/black"
        android:backgroundTint="@color/greenblue"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="2"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        android:layout_below="@id/btn1"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:textColor="@color/black"
        android:backgroundTint="@color/red"
        android:layout_toRightOf="@id/btn1"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:textColor="@color/black"
        android:backgroundTint="@color/cyan"
        android:layout_alignBottom="@id/btn2"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:textColor="@color/black"
        android:backgroundTint="@color/green"
        android:layout_toRightOf="@id/btn2"
        android:layout_alignBottom="@id/btn2"/>

    <Button
        android:id="@+id/btn6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:textColor="@color/black"
        android:backgroundTint="@color/pink"
        android:layout_below="@id/btn2"
        android:layout_alignEnd="@id/btn2"/>

    <Button
        android:id="@+id/btn7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:textColor="@color/black"
        android:backgroundTint="@color/orange"
        android:layout_below="@id/btn6"
        android:layout_alignLeft="@id/btn6"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:text="8"
        android:textColor="@color/black"
        android:backgroundTint="@color/purple"
        android:layout_below="@id/btn7"/>

    <Button
        android:id="@+id/btn9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_toRightOf="@id/btn8"
        android:layout_alignBottom="@id/btn8"/>

    <Button
        android:id="@+id/btn10"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="10"
        android:textColor="@color/black"
        android:backgroundTint="@color/gray"
        android:layout_toRightOf="@id/btn9"
        android:layout_alignTop="@id/btn8"/>

    <Button
        android:id="@+id/btnLorem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem"
        android:textColor="@color/black"
        android:backgroundTint="@color/cyan"
        android:padding="60dp"
        android:layout_below="@id/btn10"/>

    <Button
        android:id="@+id/btnIpsum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ipsum"
        android:textColor="@color/black"
        android:backgroundTint="@color/yellow"
        android:layout_toRightOf="@id/btnLorem"
        android:layout_alignBaseline="@id/btnLorem"/>

</RelativeLayout>